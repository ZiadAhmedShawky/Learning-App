<%-include('includes/head.ejs')%>
<link rel="stylesheet" href="css/courses.css">
<link rel="stylesheet" href="css/showCourses.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="/css/nav.css">
<%-include('includes/navigation.ejs')%>

<h2 class="courseTitle heading"><%=courseTitle%></h2>


<section class="courses">
    <div class="box-container">
    <%for(let course of courses){%>    
             <div class="box">
                <div class="tutor">
                   <div class="info">
                      <h3><%=course.author%></h3>
             </div>
            </div>
            <div class="thumb">
             <img src="<%=course.img%>" alt="">
             <span><%=course.video.length%> videos</span>
            </div>
            <h3 class="title"><%=course.courseName%></h3>
            <a href="/<%=course.slug%>" class="inline-btn">view playlist</a>
         </div>
         
        <%}%>
    </section>

<script src="js/script.js"></script>
<%-include('includes/end.ejs')%>
